          color: 'bg-blue-50 text-blue-700 border-blue-400 dark:bg-blue-900/30 dark:text-blue-300 dark:border-blue-600',
          icon: <Calendar className="w-3 h-3" />,
          dot: 'bg-blue-500',
          emoji: 'üìÖ'
        }
      case FloristAvailability.UNAVAILABLE:
