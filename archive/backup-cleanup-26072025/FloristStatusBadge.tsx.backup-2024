const FloristStatusBadge: React.FC<FloristStatusBadgeProps> = ({
  florist,
  assignedEvents = [],
  showDetails = false,
  size = 'md'
}) => {
  const {
    currentStatus,
    statusReason,
    nextStatusChange,
    scheduleSummary,
    isOnMission,
    isUnavailable,
