  )

  function getStatusText(): string {
    switch (currentStatus) {
      case FloristAvailability.AVAILABLE:
        return 'Disponible'
      case FloristAvailability.ON_MISSION:
        return 'Programm√© sur une mission'
      case FloristAvailability.UNAVAILABLE:
