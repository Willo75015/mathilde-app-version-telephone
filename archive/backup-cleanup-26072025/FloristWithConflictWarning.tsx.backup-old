    if (conflicts.hasConflict) {
      setShowConflictWarning(true)
    } else {
      onAssign(florist)
    }
  }
  
  const handleForceAssign = () => {
    setShowConflictWarning(false)
    onAssign(florist)
  }
  
  const handleConfirmWithCheck = () => {
    if (conflicts.hasConflict) {
      setShowConflictWarning(true)
    } else if (onStatusChange) {
      onStatusChange('confirmed')
    }
  }
  
