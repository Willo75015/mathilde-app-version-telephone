  showAddButton?: boolean
  compact?: boolean
  assignmentStatus?: 'confirmed' | 'pending' | 'refused' | null
  onStatusChange?: (newStatus: 'confirmed' | 'pending' | 'refused') => void
  onRemove?: () => void
}

