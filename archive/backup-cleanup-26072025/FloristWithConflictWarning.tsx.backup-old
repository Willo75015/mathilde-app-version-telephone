    )
  }
  
  // Version compl√®te
  return (
    <>
      <div className={`flex items-center justify-between p-3 rounded-lg border border-gray-200 dark:border-gray-600 ${getCardStyle()}`}>
        <div className="flex items-center space-x-3">
